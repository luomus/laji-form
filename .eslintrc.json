{
    "parser": "babel-eslint",
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
		"jasmine": true
    },
    "extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"plugin:protractor/recommended",
		"plugin:jasmine/recommended"
	],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "rules": {
        "strict": 0,
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "react/prop-types": "off",
        "react/display-name": "off",
        "no-mixed-spaces-and-tabs": [
            "error",
            "smart-tabs"
        ],
        "no-unsafe-finally": "off",
        "no-constant-condition": [
            "error",
            {"checkLoops": false}
        ],
        "react/no-find-dom-node": "off",
        "react/jsx-no-bind": 2,
        "jasmine/no-spec-dupes": [1, "branch"],
        "protractor/no-describe-selectors": "off",
        "no-console": "off"
    },
    "plugins": [
        "react",
		"protractor",
		"jasmine"
    ],
	"globals": {
		"L": true
	}
}
