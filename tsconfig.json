{
	"compilerOptions": {
		"outDir": "./lib",
		"module": "commonjs",
		"target": "es5",
		"lib": [
			"dom",
			"es7",
			"es2016.array.include"
		],
		"sourceMap": false,
		"allowJs": true,
		"jsx": "react",
		"moduleResolution": "node",
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true
	},
	"include": [
		"./src/**/*"
  ]
}
