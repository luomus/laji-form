{
	"compilerOptions": {
		"outDir": "./build",
		"module": "es6",
		"target": "es6",
		"lib": [
			"dom",
			"es7",
			"es2016.array.include"
		],
		"allowJs": true,
		"jsx": "react",
		"moduleResolution": "node",
		"noImplicitReturns": true,
		"noImplicitThis": false,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"experimentalDecorators": true
	},
	"include": [
		"./src/**/*"
	]
}
